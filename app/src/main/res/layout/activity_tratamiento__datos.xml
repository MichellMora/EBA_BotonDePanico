<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="Inicio_app.Tratamiento_Datos">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:alpha="0.5"
        android:text="Autorizo, teniendo en cuenta la ley 1581 de 2012 y demás normas afines, de manera libre y voluntaria a la aplicación EBA para realizar tratamiento de datos personales brindados dentro de la App, entendiendo que son utilizados para su normal funcionamiento y que estos no seran tratados fuera de la misma, además, garantizo la veracidad de los datos proporcionados."
        app:layout_constraintBottom_toTopOf="@+id/btnAutorizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <Button
        android:id="@+id/btncont"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="Continuar"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor = "@color/gris"
        app:cornerRadius = "20dp"
        android:textColor="@color/gris"
        android:backgroundTint="@color/gris_claro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <CheckBox
        android:id="@+id/btnAutorizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:alpha="0.5"
        android:textStyle="bold"
        android:text="Autorizo tratamiento de datos personales"
        app:layout_constraintBottom_toTopOf="@+id/btncont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>